@model IEnumerable<DungeonMasterStudio.Models.CharacterModel>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NPC Generator</title>
</head>
<body>
    <div class=container>
        <h1>Non-Playing Characters</h1>
        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
        <div class="row gx-5">
            @foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">@item.Name</h3>
                            <p>@item.Date</p>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ID">Edit</a> 
                            <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.ID">Details</a> 
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>   
                        </div>
                    </div>         
                </div>
            }
        </div>
    </div>
</body>
</html>
