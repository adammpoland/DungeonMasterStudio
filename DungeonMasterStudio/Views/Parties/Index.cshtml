@model IEnumerable<DungeonMasterStudio.Models.Party>

@{
    ViewData["Title"] = "Index";
}

<h1>Parties</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
 <div class="container px-5">
        <h1 class="text-white">Parties</h1>
        
        <div class="row gx-5">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 p-1">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">@item.Name</h3>
                            <a asp-action="PartyRoom" class="btn btn-primary" asp-route-id="@item.PartyID">Enter Party</a> 
                            <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.PartyID">Details</a> 
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PartyID">Delete</a>   
                        </div>
                    </div>         
                </div>
            }
        </div>
        <br>
    </div>
